<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_top_view"/>
    <Button
        android:id="@+id/btn_scene_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取联动列表"/>
    <TextView
        android:id="@+id/tv_scene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_scene_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入一件执行id："/>
        <Button
            android:id="@+id/btn_exe_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行联动"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_auto_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入自动化id："/>

        <Switch
            android:id="@+id/switch_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mg_20"/>
    </LinearLayout>

</LinearLayout>